<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<TabPane fx:id="tab" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="knjiznica.view.StartScreenView">
  <tabs>
    <Tab fx:id="tabb" text="Book List">
         <content>
            <BorderPane fx:id="bpp">
               <center>
                  <TableView fx:id="list" BorderPane.alignment="CENTER">
                    <columns>
                      <TableColumn fx:id="titleCol" prefWidth="75.0" text="Title" />
                      <TableColumn fx:id="authorCol" prefWidth="75.0" text="Author" />
                    </columns>
                  </TableView>
               </center>
            </BorderPane>
         </content>
    </Tab>
    <Tab fx:id="tabbb" text="Add Book">
         <content>
            <BorderPane fx:id="bp">
               <center>
                  <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="95.0" minWidth="10.0" prefWidth="44.0" />
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="95.0" minWidth="10.0" prefWidth="26.0" />
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="167.0" minWidth="10.0" prefWidth="149.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="Title" GridPane.columnIndex="1" />
                        <TextField GridPane.columnIndex="2" />
                     </children>
                  </GridPane>
               </center>
               <bottom>
                  <HBox prefHeight="23.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                     <children>
                        <Button mnemonicParsing="false" text="Add">
                           <HBox.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" />
                           </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" text="Cancel" />
                     </children>
                  </HBox>
               </bottom>
            </BorderPane>
         </content>
    </Tab>
  </tabs>
</TabPane>
